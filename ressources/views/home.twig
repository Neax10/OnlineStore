{% extends 'templates/onlinestore.twig' %}

{% block content %}
	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
		</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
						<img class="d-block w-100" src="{{base_url()}}/img/slide1.svg" alt="First Slide">
				</div>
				<div class="carousel-item">
						<img class="d-block w-100" src="{{base_url()}}/img/slide2.svg" alt="Second slide">
				</div>
				<div class="carousel-item">
						<img class="d-block w-100" src="{{base_url()}}/img/slide3.svg" alt="Third slide">
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col col-lg-2">
				<h1>Navigation</h1>
			</div>
			<div class="col">
				{% block product %}
					<div class="row">
					{% for product in products %}
						<div class="col-lg-2 col-md-4 col-sm-6 portfolio-item">
							<div class="card h-100">
								<a href="{{ path_for('product', {id: product.id, name: product.name}) }}"><img class="card-img-top" src={{ product.picture }} alt=""></a>
								<div class="card-body">
									<h4 class="card-title">
										<a href="{{ path_for('product', {id: product.id, name: product.name}) }}">{{ product.name }}</a>
									</h4>
									<p class="card-text">{{ product.description }}</p>
								</div>
							</div>
						</div>
					{% endfor %}
					</div>
				{% endblock %}
			</div>
		</div>
	</div>

	

{% endblock %}