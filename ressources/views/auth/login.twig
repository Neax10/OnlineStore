{% extends 'templates/onlinestore.twig' %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h1>Login</h1>
				</div>
				<div class="card-body">
					<form id="form-register" action="{{path_for('auth.login') }}" method="post" autocomplete="off">
						<div class="form-group">
							<label for="input-register-name">Username</label>
							<input type="text" class="form-control{{ errors.username ? ' is-invalid' : '' }}" id="input-register-name" name="username" placeholder="Username" value="{{ old.username }}">
							<div class="invalid-feedback">
								{{ errors.username | first }}
							</div>
						</div>
						<div class="form-group">
						<label for="input-register-password">Password</label>
						<input type="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}" id="input-register-password" name="password" placeholder="Password">
							<div class="invalid-feedback">
								{{ errors.password | first }}
							</div>
						</div>
						<button type="submit" class="btn btn-success btn-lg" name="submit" value="login">Login</button>
						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}