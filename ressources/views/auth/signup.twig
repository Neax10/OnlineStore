{% extends 'templates/onlinestore.twig' %}

{% block content %}
	<div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h1>Sign Up</h1>
        </div>
        <div class="card-body">
          <form id="form-register" action="{{path_for('auth.signup') }}" method="post" autocomplete="off">
            <div class="form-group">
              <label for="input-register-name">Username</label>
              <input type="text" class="form-control{{ errors.username ? ' is-invalid' : '' }}" id="input-register-name" name="username" placeholder="Username" value="{{ old.username }}">
              <small id="passwordHelpBlock" class="form-text text-muted">
                Your Usnername must be 4-32 characters long.
              </small>
              <div class="invalid-feedback">
                {{ errors.username | first }}
              </div>
            </div>
            <div class="form-group">
              <label for="input-register-email">E-Mail</label>
              <input type="email" class="form-control{{ errors.email ? ' is-invalid' : '' }}" id="input-register-email" name="email" placeholder="E-Mail" value="{{ old.email }}">
              <div class="invalid-feedback">
                {{ errors.email | first }}
              </div>
            </div>
            <div class="form-group">
              <label for="input-register-password">Password</label>
              <input type="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}" id="input-register-password" name="password" placeholder="Password">
              <small id="passwordHelpBlock" class="form-text text-muted">
                Your password must be 8-72 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
              </small>
              <div class="invalid-feedback">
                {{ errors.password | first }}
              </div>
            </div>
            <div class="form-group">
              <label for="input-register-password-confirm">Verify</label>
              <input type="password" class="form-control" id="input-register-password-confirm" name="passwordconfirm" placeholder="Password again">
            </div>
            <button type="submit" class="btn btn-success btn-lg" name="submit" value="login">Register</button>

            {{ csrf.field | raw }}

          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}